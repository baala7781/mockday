# MockDay Backend - Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - These must be set for the app to work
# =============================================================================

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=./firebase-service-account.json
GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Redis (for caching and session state)
# Local: redis://localhost:6379/0
# Upstash: redis://default:xxx@xxx.upstash.io:6379
REDIS_URL=redis://localhost:6379/0

# API Keys (comma-separated for load balancing)
# Get from: https://console.deepgram.com/
DEEPGRAM_API_KEYS=your_deepgram_key_1,your_deepgram_key_2

# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEYS=your_gemini_key_1,your_gemini_key_2

# Get from: https://platform.openai.com/api-keys (optional, only if using OpenAI)
OPENAI_API_KEYS=

# =============================================================================
# CORS & SECURITY
# =============================================================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5174

# Comma-separated allowed origins
ALLOWED_ORIGINS=http://localhost:5174,http://localhost:3000

# =============================================================================
# OPTIONAL - Defaults are fine for development
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Service URLs (only change if running multiple services)
USER_SERVICE_URL=http://localhost:8001
INTERVIEW_SERVICE_URL=http://localhost:8002
REPORT_SERVICE_URL=http://localhost:8003
ANALYTICS_SERVICE_URL=http://localhost:8004

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Management
SESSION_TIMEOUT=3600
SESSION_CLEANUP_INTERVAL=300

# Monitoring (optional)
SENTRY_DSN=

# PostgreSQL (optional, not currently used)
POSTGRES_URL=

# Message Queue (optional, not currently used)
RABBITMQ_URL=
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

